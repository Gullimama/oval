{% extends "template.njk" %}

{% block main %}
{% include "_header.njk" %}

<!-- header section -->
<div class="contact-page ">
  <div class="header__section">
    <div class="sub_header-title">
      <p>CONTACT US</p>
    </div>
    <div class="header-title">
      <h5>Let’s talk.</h5>
    </div>
    <div class="header-body">
      <p>If you have any questions about the subscription or are not sure which plan is right for you, contact our team
        and let’s schedule a call.</p>
    </div>
    <div class="header-botton">
      <button> call us <br> (669) 984-9439</button>
      <button>Email us <br> help@oval.com</button>
    </div>
  </div>

  <!-- contact form -->
  <div class="contact-form_sec">
    <div class="form_sec-title"></div>
    <div class="form_sec-body"></div>
    <form>
      <div class="form-group">
        <label for="name">Your name</label>
        <input type="text" class="form-control" id="name" placeholder="Enter your name">

        <label for="exampleInputEmail1">Your email</label>
        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter your email">


        <select class="custom-select">
          <option selected>Open this select menu</option>
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>

        <label for="exampleFormControlTextarea1">Message</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>

        <button type="submit" class="btn btn-primary">Contact Us</button>
      </div>
    </form>
  </div>
  
  <!-- top branding -->
  <div class="branding__section">
    <div class="branding_list">
      <div class="brand item-1">
        <img src="image/svg/about-us/Google.svg" alt="Google">
      </div>
      <div class="brand item-2">
        <img src="image/svg/about-us/Amazon.svg" alt="amazon">
      </div>
      <div class="brand item-3">
        <img src="image/svg/about-us/Intel.svg" alt="INTEL">
      </div>
      <div class="brand item-4">
        <img src="image/svg/about-us/an.svg" alt="atlassian">
      </div>
    </div>
  </div>

</div>

<!-- topic section -->
<div class="topic__section">
  <div class="topic-title">
    <h4>Most asked Topics</h4>
  </div>
  <div class="topic-items">
    <div class="item">
      <div class="icon">
        <img src="image/svg/contact/Pixel.svg" alt="pixel">
      </div>
      <div class="icon-title">
        <h6>Workspace Guides</h6>
      </div>
    </div>
    <div class="item">
      <div class="icon">
        <img src="image/svg/contact/Share - 2.svg" alt="share">
      </div>
      <div class="icon-title">
        <h6>Sharing & collaboration</h6>
      </div>
    </div>
    <div class="item">
      <div class="icon">
        <img src="image/svg/contact/Image.svg" alt="image">
      </div>
      <div class="icon-title">
        <h6>Media & Files</h6>
      </div>
    </div>
    <div class="item">
      <div class="icon">
        <img src="image/svg/contact/Pen.svg" alt="pen">
      </div>
      <div class="icon-title">
        <h6>Editing Pages</h6>
      </div>
    </div>
    <div class="item">
      <div class="icon">
        <img src="image/svg/contact/Warning.svg" alt="warning">
      </div>
      <div class="icon-title">
        <h6>Security & Privacy</h6>
      </div>
    </div>
    <div class="item">
      <div class="icon">
        <img src="image/svg/contact/User Alt.svg" alt="user">
      </div>
      <div class="icon-title">
        <h6>Accounting & Settings</h6>
      </div>
    </div>
    <div class="item">
      <div class="icon">
        <img src="image/svg/contact/Magic Wand.svg" alt="magic">
      </div>
      <div class="icon-title">
        <h6>Tips & Trick</h6>
      </div>
    </div>
    <div class="item">
      <div class="icon">
        <img src="image/svg/contact/Layers.svg" alt="layers">
      </div>
      <div class="icon-title">
        <h6>Database Issue</h6>
      </div>
    </div>
    <div class="item">
      <div class="icon">
        <img src="image/svg/contact/Message.svg" alt="message">
      </div>
      <div class="icon-title">
        <h6>Talk to us</h6>
      </div>
    </div>
  </div>
</div>

<!-- office address -->
<div class="office__section">
  <div class="office__section-title"></div>
  <div class="office__section-body"></div>
  <div class="card-items">
    <div class="card mb-3">
      <img src="image/png/contact/office__team.png" class="card-img-top" alt="office-team">
      <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
    <div class="card mb-3">
      <img src="image/png/contact/office__address.png" class="card-img-top" alt="address-map">
      <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
  </div>
</div>


<!-- Footer section -->
{% include "_footer.njk" %}
{% endblock %}